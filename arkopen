#!/bin/bash

basedir=~/Work/arkopen

if [ "$1" == "ls" ]; then
	ls $basedir
	exit 0
elif [ "$1" == "clean" ]; then
	rm -r $basedir/*
	exit 0
fi

file=$(realpath "$1")
if [ -z "$file" ]; then 
	echo "$0 fichier"
	exit 1
fi

dest=$basedir/$(basename "$file" | sed 's/[.][a-z]*$//g')
if [ -d "$dest" ]; then 
	echo "le dossier $dest existe déjà"
	exit 1
fi

type=''
filetype=$(file "$file")
for filtre in Zip RPM Debian tar 7-zip; do 
	echo $filetype | grep $filtre &>/dev/null
	if [ $? -eq 0 ]; then type=$filtre; fi
done

if [[ "$file" =~ tar.gz ]]||[[ "$file" =~ tgz ]]; then type=targz; fi
if [[ "$file" =~ tar.bz2 ]]||[[ "$file" =~ tbz2 ]]; then type=tarbz2; fi

if [ ! -z "$type" ]; then 
	mkdir -p "$dest"

	case $type in
	Zip)
		unzip "$file" -d "$dest"
		;;

	RPM)
		cd "$dest"
		rpm2cpio "$file" | cpio -idmv
		;;

	Debian)
		cd "$dest"
		ar x "$file"
		for fichier in data.tar.*; do tar -xf $fichier; done
		mkdir DEBIAN
		cd DEBIAN
		tar -xzf ../control.tar.gz
		rm ../control.tar.gz ../data.tar.*
		;;

	tar)
		cd "$dest"
		tar -xf "$file"
		;;

	targz)
		cd "$dest"
		tar -xzf "$file"
		;;

	tarbz2)
		cd "$dest"
		tar -xjf "$file"
		;;

	7-zip)
		7z e -o"$dest" "$file"
		;;

	*)
		echo "format non géré : $type"
	esac

	echo "cd '$dest'" | xclip -selection clipboard
	echo "cd '$dest' (ctrl+v)"
else
	echo "format non géré : $filetype"
fi
